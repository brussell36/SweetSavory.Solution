@{
  Layout = "_Layout";
}

@using SweetSavory.Models
@model List<SweetSavory.Models.Treat>

<h1>Treats</h1>
<hr>
@if (Model.Count == 0)
{
  <h3>No Flavors have been added yet.</h3>
}

@foreach (Treat treat in Model)
{
  <h3>@Html.ActionLink($"{treat.Dish}", "Details", new { id = treat.TreatId })</h3>
}
<hr>
<h5>@Html.ActionLink("Add new Treat", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>