@{
  Layout = "_Layout";
}

@using SweetSavory.Models
@model List<SweetSavory.Models.Flavor>

<h1>Flavors</h1>
<hr>
@if (Model.Count == 0)
{
  <h3>No Flavors have been added yet.</h3>
}

@foreach (Flavor flavor in Model)
{
  <h3>@Html.ActionLink($"{flavor.Taste}", "Details", new { id = flavor.FlavorId })</h3>
}
<hr>
<h5>@Html.ActionLink("Add new Flavor", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>