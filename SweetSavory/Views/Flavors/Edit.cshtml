@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Flavor

<h1>Edit this Flavor: @Html.DisplayFor(model => model.Taste)</h1>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.HiddenFor(model => model.FlavorId)
    @Html.LabelFor(model => model.Taste)
    @Html.TextBoxFor(model => model.Taste, new {@class="form-control"})
  </div>
  <input type="submit" value="Save" class="btn btn-outline-dark" />
}
<hr>
<h5>@Html.ActionLink("Back to Flavors list", "Index")</h5>